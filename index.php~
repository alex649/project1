if (isset($_GET["page"]))
{
    $page = $_GET["page"];
    echo "Test2";
}	
else
{
    $page = "home";
    echo "Test3";
}

$path = __DIR__ . '/controller/' . $page . '.php';

if (file_exists($path))
{
    echo "Test4";
    require($path);
}

